<%
   artists = track.artists.first.name
   title = track.name
   image = track.album.images.last['url']
   alt = track.album.name + ' cover image'
%>

<li class="row row-flex">
  <div class="col-sm-2 col-xs-3 image">
    <%= image_tag image, alt: alt %>
  </div>
  <div class="col-sm-10 col-xs-9">
    <div class="row row-flex">
      <div class="col-sm-6 col-xs-12 col-sm-push-6 title">
        <%= title %>
      </div>
      <div class="col-sm-6 col-xs-12 col-sm-pull-6">
        <%= artists %>
      </div>
    </div>
  </div>
</li>